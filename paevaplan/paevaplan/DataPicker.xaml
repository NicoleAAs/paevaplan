<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="paevaplan.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="label" Text="Select Date" FontSize="Medium" />
            <DatePicker Format="D" DateSelected="datePicker_DateSelected">
                <DatePicker.MinimumDate>10/01/20</DatePicker.MinimumDate>
            <DatePicker.MaximumDate>10/31/20</DatePicker.MaximumDate>
            </DatePicker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>